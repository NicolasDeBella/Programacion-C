int inicializarArray (int array[], int len, int numero);
int cargarArray (int array[], int longitud, int numeroIngresado);

int main(void) {
	setbuf(stdout, NULL);
	int arrayNumeros[10];
	int ingresoDeDatos;
	int retorno;


	inicializarArray (arrayNumeros,10,0);
	(cargarArray(arrayNumeros,10)==0)

	{
		printf("Los numeros ingresados son: %d",ingresoDeDatos);
	}else
		(printf("Error"));





	return EXIT_SUCCESS;
}

int inicializarArray (int array[], int len, int numero)
{
	int retorno=0;
	int i=0;


	if(array!=NULL && len>0)
	{
		for(i=0;i<len;i++)
		{
			array[i]=numero;
		}

	}
	return retorno;
}

void imprimirArray (int array[], int longitud)//por referencia, puedo leer o escribir//
{
	int i;
	for(i=0;i<longitud;i++)
	{
		printf("%d",array[i]);
	}





}
